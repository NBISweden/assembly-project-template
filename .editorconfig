# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true

[*.qmd]
indent_size = 2

[*.{c,h,cpp,hpp,d,sh,py,pl}]
max_line_length = 100

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2
