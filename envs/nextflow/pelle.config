// Configuration for Pelle

params {
    project = null
}

// https://docs.uppmax.uu.se/hardware/clusters/pelle/#pellemaja-hardware
process {
    resourceLimits = [
        cpus: 96,
        memory: 3.TB,
        time: 2.d,
    ]

    executor       = 'slurm'
    scratch        = '/scratch'
    clusterOptions = { task.memory > 768.GB ? '--partition=fat' : '' }
}

singularity {
    enabled = true
}

executor {
    '$slurm' {
        account = params.project
    }
}
